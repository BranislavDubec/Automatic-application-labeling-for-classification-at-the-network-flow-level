{
    "manifest_version": 3,
    "name": "Get app information",
    "description": "Get app information",
    "version": "1.0",
    "icons": {
      "32": "images/icon.svg"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "receiver@example.com",
          "strict_min_version": "50.0"
        }
      },

    "permissions": [
        "webRequest",
        "nativeMessaging"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "scripts": ["get_app_information.js"]
    }
  }
